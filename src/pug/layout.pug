include mixins.pug

doctype html

block var

html.page(lang='ru')

  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    //- Edge и ряд мобильных браузеров слишком умны. Отключим это.
    meta(name='format-detection', content='telephone=no')
    meta(name='format-detection', content='date=no')
    meta(name='format-detection', content='address=no')
    meta(name='format-detection', content='email=no')
    meta(content='notranslate', name='google')

    //- Настройки шаринга, оставил ссылки на изображение так как остальное берт с дескришина https://ruogp.me/
    //- meta(property='og:image', content='img/sharing/logo.png')
    //- meta(property='vk:image', content='img/sharing/logo.png')
    //- meta(name='twitter:image:src', content='img/sharing/logo.png')

    //- Фавиконки (https://realfavicongenerator.net)
    link(rel='mask-icon' href='img/favicon/safari-pinned-tab.svg' color='#5bbad5')
    link(rel='apple-touch-icon' sizes='180x180' href='img/favicon/apple-touch-icon.png')
    link(rel='icon' type='image/png' sizes='32x32' href='img/favicon/favicon-32x32.png')
    link(rel='icon' type='image/png' sizes='16x16' href='img/favicon/favicon-16x16.png')
    link(rel='icon', type='image/ico', sizes='16x16', href='img/favicon/favicon.ico')

    //- Оптимизация шрифта
    //- link(rel='preload' href='fonts/' as='font')
    link(rel='stylesheet', href='libs/fancybox/fancybox.css')
    link(rel='stylesheet', href='libs/swiper/swiper-bundle.min.css')
    link(rel='stylesheet', href='libs/choices/choices.min.css')
    link(rel='stylesheet', href="libs/nouislider/dist/nouislider.min.css")
    link(rel='stylesheet', href='css/style.min.css')
    meta(name='msapplication-TileColor', content='#603cba')
    meta(name='theme-color', content='#fffff')
    meta(name='msapplication-navbutton-color', content='#000')
    meta(name='apple-mobile-web-app-status-bar-style', content='#000')

    block meta
      title Home

  body.page__inner
    block header
      p «шапка»
    main.page__content(class=pageClassName)
      block content
        p содержимое страницы
    block footer
      p «подвал»
    +modal-content
    +modal-size-table
    +modal-terms-use
    +modal-shop
    +modal-basket
    +modal-basket-no-empty
    +modal-entry
    +modal-no-entry
    +modal-reg
    +modal-recovery
    +modal-gift
    +modal-menu
    +modal-filter
    block page-bottom
      script(src="libs/fancybox/fancybox.umd.js")
      script(src="libs/choices/choices.min.js")
      script(src="libs/swiper/swiper-bundle.min.js")
      script(src="libs/nouislider/dist/nouislider.min.js")
      script(src="libs/imask/dist/imask.min.js")
      script(src="libs/pristine/pristine.min.js")
      script(src="libs/scroll-lock/dist/scroll-lock.min.js")
      script(src='js/custom.js')
